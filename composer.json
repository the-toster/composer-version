{
    "name": "the-toster/composer-version",
    "description": "Add npm-like version commands to composer",
    "type": "composer-plugin",
    "extra": {
        "class": "ComposerVersionPlugin\\Plugin\\Plugin"
    },
    "require": {
        "composer-plugin-api": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "composer/composer": "^1.9",
        "vimeo/psalm": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "ComposerVersionPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    }
}
