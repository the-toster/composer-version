{
    "name": "the-toster/composer-version",
    "description": "Composer plugin that adds npm-like version commands (patch, minor, major) and use git tags to store versions",
    "keywords": ["version","bump","npm-version","semver"],
    "homepage": "https://github.com/the-toster/composer-version",
    "license": "MIT",
    "type": "composer-plugin",
    "extra": {
        "class": "ComposerVersionPlugin\\Plugin\\Plugin"
    },
    "require": {
        "composer-plugin-api": "^2.0|^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "composer/composer": "^2.0|^1.9",
        "vimeo/psalm": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "ComposerVersionPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    }
}
